<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    tools:context=".activity.SettingOtherActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_setting"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#008577"
        app:theme="@style/Theme.Toolbar.Base"
        app:popupTheme="@style/Theme.Toolbar.Base" />
    <View
        android:layout_width="match_parent"
        android:background="@color/color_eeeeee"
        android:layout_height="12dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/news_setting"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"
                android:text="消息设置"
                android:textColor="#2C2C2C" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"
                android:drawableEnd="@drawable/arrow"
                android:gravity="center_vertical|right"
                android:text=""
                android:textColor="#2C2C2C"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/color_eeeeee"
            android:layout_height="12dp"/>
        <LinearLayout
            android:id="@+id/help_center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"
                android:text="帮助中心"
                android:textColor="#2C2C2C" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"
                android:drawableEnd="@drawable/arrow"
                android:gravity="center_vertical|right"
                android:text=""
                android:textColor="#2C2C2C"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/color_eeeeee"
            android:layout_height="2dp"/>
        <LinearLayout
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"
                android:text="意见反馈"
                android:textColor="#2C2C2C" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"
                android:drawableEnd="@drawable/arrow"
                android:gravity="center_vertical|right"
                android:text=""
                android:textColor="#2C2C2C"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/color_eeeeee"
            android:layout_height="2dp"/>
        <LinearLayout
            android:id="@+id/about_us"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"
                android:text="关于我们"
                android:textColor="#2C2C2C" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="2"
                android:drawableEnd="@drawable/arrow"
                android:gravity="center_vertical|right"
                android:text=""
                android:textColor="#2C2C2C"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/color_eeeeee"
            android:layout_height="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/color_eeeeee"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/custom_service"
            android:gravity="center"
            android:layout_marginTop="120dp"
            android:layout_width="wrap_content"
            android:layout_marginStart="114dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="12dp"
                android:text="联系客服:"
                android:textColor="#2C2C2C" />
            <TextView
                android:id="@+id/phone_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="12dp"
                android:text="400-643-6772"
                android:textColor="#2C2C2C"
                />
            </LinearLayout>


        <Button
            android:id="@+id/exit"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="match_parent"
            android:text="退出登录"
            android:textSize="22sp"
            android:background="@drawable/button_border"
            android:textColor="@color/color_ffffff"
            android:layout_height="60dp" />
    </LinearLayout>
</LinearLayout>