<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_ffffff"
    tools:context=".activity.AddParkingActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_add"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#008577"
        app:theme="@style/Theme.Toolbar.Base"
        app:popupTheme="@style/Theme.Toolbar.Base"
        />
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text=" 车位概况 "
            android:textSize="22sp"
            android:textColor="#88000000"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="@color/color_eeeeee"
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text=" *车位地址："
            android:textColor="@color/sbc_header_text"
            android:textSize="18sp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/add_text"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:gravity="start"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:hint="    请在右边定位按钮去选取相应地址信息"
                android:background="@drawable/textview_border"/>
            <ImageView
                android:id="@+id/location"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/location"/>
        </LinearLayout>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text=" *经纬度："
                android:textColor="@color/sbc_header_text"
                android:textSize="18sp"
                android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_latitude"
                android:layout_marginStart="10dp"
                android:background="@drawable/textview_border"
                android:padding="6dp"
                android:hint="   纬度"
                android:gravity="start"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_Longitude"
                android:layout_marginStart="20dp"
                android:padding="6dp"
                android:hint="   经度"
                android:gravity="start"
                android:background="@drawable/textview_border"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text=" *详细地址："
            android:textColor="@color/sbc_header_text"
            android:textSize="18sp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/address_full"
            android:padding="6dp"
            android:gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:hint="   请填写详细的地址"
            android:layout_width="match_parent"
            android:background="@drawable/textview_border"
            android:layout_height="32dp" />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text=" *车位编号："
            android:textColor="@color/sbc_header_text"
            android:textSize="18sp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/SpaceId"
            android:padding="6dp"
            android:gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:hint="   请输入您的车位编号"
            android:layout_width="match_parent"
            android:background="@drawable/textview_border"
            android:layout_height="32dp" />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text=" *发布人："
            android:textColor="@color/sbc_header_text"
            android:textSize="18sp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/publisher"
            android:padding="6dp"
            android:gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:hint="   请填写您的姓名"
            android:layout_width="match_parent"
            android:background="@drawable/textview_border"
            android:layout_height="32dp" />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text=" *联系电话："
            android:textColor="@color/sbc_header_text"
            android:textSize="18sp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/phoneNum"
            android:padding="6dp"
            android:gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:inputType="phone"
            android:hint="   请输入您的联系电话"
            android:layout_width="match_parent"
            android:background="@drawable/textview_border"
            android:layout_height="32dp" />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text=" *车位图片："
            android:textColor="@color/sbc_header_text"
            android:textSize="18sp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_upload"
            android:padding="6dp"
            android:gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:hint="   上传图片"
            android:layout_width="wrap_content"
            android:background="@drawable/textview_border"
            android:layout_height="32dp" />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text=" *车位备注："
            android:textColor="@color/sbc_header_text"
            android:textSize="18sp"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/comment"
            android:padding="6dp"
            android:gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:hint="   可填写车位备注信息"
            android:layout_width="match_parent"
            android:background="@drawable/textview_border"
            android:layout_height="70dp" />
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_btn_login_selected"
            android:text="确认"
            android:textColor="#ffffffff"
            android:textSize="18sp" />



    </LinearLayout>

</LinearLayout>