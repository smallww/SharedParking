<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.ChargeMoneyActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_charge"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#008577"
        app:theme="@style/Theme.Toolbar.Base"
        app:popupTheme="@style/Theme.Toolbar.Base" />
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#009688"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="125dp"
                android:text="充值"
                android:textSize="30sp"
                android:textColor="@color/color_ffffff"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_marginStart="8dp"
                android:text="30"
                android:textSize="30sp"
                android:textColor="#FFC107"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="8dp"
                android:text="元"
                android:textSize="30sp"
                android:textColor="@color/color_ffffff"
                android:gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/color_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:text="请选择充值金额"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button"
                android:background="@color/color_eeeeee"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="20元"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/button1"
                android:layout_marginStart="10dp"
                android:background="@color/color_eeeeee"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="30元"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/button2"
                android:layout_marginStart="10dp"
                android:background="@color/color_eeeeee"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="50元"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button3"
                android:background="@color/color_eeeeee"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="100元"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/button4"
                android:layout_marginStart="10dp"
                android:background="@color/color_eeeeee"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="300元"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/button5"
                android:layout_marginStart="10dp"
                android:background="@color/color_eeeeee"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="500元"
                android:textSize="18sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <EditText
            android:id="@+id/other_money"
            android:background="@drawable/textview_border"
            android:layout_width="match_parent"
            android:imeOptions="actionDone"
            android:layout_marginTop="8dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"
            android:inputType="number"
            android:maxLength="5"
            android:gravity="center"
            android:hint="请输入其他金额"
            android:layout_height="45dp" />
    </LinearLayout>
    <Button
        android:id="@+id/bth_charge"
        android:layout_marginTop="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="立即充值"
        android:textSize="22sp"
        android:background="@drawable/button_border"
        android:textColor="@color/color_ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp" />




</LinearLayout>