<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    tools:context=".activity.MyCarActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_space"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#008577"
        app:theme="@style/Theme.Toolbar.Base"
        app:popupTheme="@style/Theme.Toolbar.Base" />
    <LinearLayout
        android:id="@+id/car_linear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="#0F03A9F4"
        >
        <ImageView
            android:id="@+id/carIV"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:layout_width="40dp"
            android:src="@drawable/car"
            android:visibility="gone"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:id="@+id/car_text"
            android:text=""
            android:layout_gravity="center"
            android:textColor="#4CAF50"
            android:textSize="36sp"
            android:layout_height="wrap_content"
             />
    </LinearLayout>

</LinearLayout>