<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    tools:context=".activity.CashOutActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_cash"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#008577"
        app:theme="@style/Theme.Toolbar.Base"
        app:popupTheme="@style/Theme.Toolbar.Base" />

    <EditText
        android:id="@+id/cash_out"
        android:background="@drawable/textview_border"
        android:layout_width="match_parent"
        android:imeOptions="actionDone"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:inputType="number"
        android:maxLength="5"
        android:gravity="center"
        android:hint="请输入提现金额的数目"
        android:layout_height="55dp" />
    <TextView
        android:id="@+id/allin"
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:text="全部提现"
        android:textSize="17sp"
        android:textColor="#FF5722"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bth_out"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="提现"
        android:textSize="22sp"
        android:background="@drawable/button_border"
        android:textColor="@color/color_ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
</LinearLayout>